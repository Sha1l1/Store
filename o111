+static gboolean scan_timeout(gpointer user_data)
+{
+	struct connman_iface *iface = user_data;
+
+	switch (iface->state) {
+	case CONNMAN_IFACE_STATE_SCANNING:
+	case CONNMAN_IFACE_STATE_READY:
+		if (iface->driver->scan)
+			iface->driver->scan(iface);
+		return TRUE;
+	default:
+		break;
+	}
+
+	return FALSE;
+}
