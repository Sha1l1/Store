+
+	task = find_task_by_index(iface->index);
+	if (task == NULL)
+		return NULL;
+
+	printf("[DHCP] release %s\n", task->ifname);
+
+	tasks = g_slist_remove(tasks, task);
+
+	kill_task(task);
 
 	return 0;
 }
