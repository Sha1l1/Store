 	return 0;
 }
+
+int __supplicant_disconnect(struct connman_iface *iface)
+{
+	struct supplicant_task *task;
+
+	task = find_task(iface->index);
+	if (task == NULL)
+		return -ENODEV;
+
+	printf("[SUPPLICANT] disconnect %s\n", task->ifname);
+
+	exec_cmd(task, "DISABLE_NETWORK 0");
+
+	return 0;
+}
