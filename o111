+struct connman_iface *__connman_iface_find(int index)
+{
+	GSList *list;
+
+	for (list = interfaces; list; list = list->next) {
+		struct connman_iface *iface = list->data;
+
+		if (iface->index == index)
+			return iface;
+	}
+
+	return NULL;
+}
