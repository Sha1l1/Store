@@ -47,78 +62,79 @@ static void parse_link(struct nlmsghdr *hdr)
 
 	DBG("ifi_index %d ifi_flags %d", msg->ifi_index, msg->ifi_flags);
 
+	iface = __connman_iface_find(msg->ifi_index);
+	if (iface == NULL)
+		return;
+
+	if ((iface->flags & CONNMAN_IFACE_FLAG_RTNL) == 0)
+		return;
