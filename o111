+				BLUEZ_ADAPTER_INTERFACE, "GetProperties");
+	if (message == NULL)
+		return;
+
+	if (dbus_connection_send_with_reply(connection, message,
+						&call, TIMEOUT) == FALSE) {
+		connman_error("Failed to get adapter properties");
+		dbus_message_unref(message);
