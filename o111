+	printf("[802.11] scanning interface index %d\n", iface->index);
+
+	return 0;
+}
+
+static int iface_connect(struct connman_iface *iface,
+					struct connman_network *network)
+{
+	printf("[802.11] connect interface index %d\n", iface->index);
+
+	return 0;
+}
+
