+static void append_property(DBusMessageIter *dict,
+				struct connman_property *property)
+{
+	if (property->flags & CONNMAN_PROPERTY_FLAG_STATIC) {
+		append_entry(dict, property->name, property->type,
+							&property->value);
+		return;
+	}
+}
