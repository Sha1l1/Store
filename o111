+#endif
 
 	g_dbus_emit_signal(connection, CONNMAN_MANAGER_PATH,
 				CONNMAN_MANAGER_INTERFACE, "ElementUpdated",
@@ -575,11 +892,12 @@ int connman_element_set_property(struct connman_element *element,
 }
 
