-int connman_iface_set_ipv4(struct connman_iface *iface,
-						struct connman_ipv4 *ipv4)
-{
-	struct ifreq ifr;
-	struct rtentry rt;
-	struct sockaddr_in *addr;
-	int sk, err;
-
-	if ((iface->flags & CONNMAN_IFACE_FLAG_RTNL) == 0)
-		return -1;
