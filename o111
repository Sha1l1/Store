-	DBG("");
+	DBG("sender %s path %s", sender, path);
+
+	if (agent_path == NULL)
+		return -ENOENT;
+
+	if (agent_watch > 0)
+		g_dbus_remove_watch(connection, agent_watch);
+
+	agent_free();
 
 	return 0;
