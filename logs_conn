+static int convert_frequency_to_channel(int freq)
+{
+	if (freq >= 2412 && freq <= 2484)
+	{
+		return (freq - 2412) / 5 + 1;
+	}
+	else if (freq >= 5170 && freq <= 5825)
+	{
+		return (freq - 5170) / 5 + 34;
+	}
+	else
+	{
+		return -1;
+	}
+}
+
