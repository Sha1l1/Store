-		{
-			jobject_put(ip_info, J_CSTR_TO_JVAL("method"),
-			            jstring_create(connected_service->ipinfo.ipv4.method));
-		}
-
-		jobject_put(network_info, J_CSTR_TO_JVAL("ipInfo"), ip_info);
-	}
