+
+bool is_vlan(const char* string)
+{
+	if (!string)
+	{
+		return false;
+	}
+
+	size_t len = strlen(string);
+	size_t i;
+
+	for (i = 0; i < len; i++)
+	{
+		if (string[i] == '.')
+		{
+			return true;
+		}
+	}
+
+	return false;
+}
