+#define WCA_API_ERROR_SET_TECHNOLOGY_STATE_NOT_SUPPORTED 181
+
+#define WCA_API_ERROR_PROXY_FIND_PROXY_FOR_URL_ERROR    205
+#define WCA_API_ERROR_FAILED_TO_SET_GO_INTENT           206
+
+#endif /* ERRORS_H_ */
