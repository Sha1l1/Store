-	{
-		LSMessageReplyCustomError(sh, message,
-		                          "Failed to disconnect the connected service",
-		                          WCA_API_ERROR_DISCONNECT_FAILED);
-		goto cleanup;
-	}
-
-	LSMessageReplySuccess(sh, message);
-
-cleanup:
-	g_free(address);
-exit:
-	j_release(&parsedObj);
-	return true;
-}
