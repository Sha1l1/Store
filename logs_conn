-
-	if (jobject_get_exists(parsedObj, J_CSTR_TO_BUF("address"), &addressObj))
-	{
-		raw_buffer address_buf = jstring_get(addressObj);
-		address = g_strdup(address_buf.m_str);
-		jstring_free_buffer(address_buf);
